---
import BlogLayout from './BlogLayout.astro';

export interface Props {
  title: string;
  category: string;
  date: string;
  image?: string;
  description?: string;
}

const { title, category, date, image, description } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('es-ES', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<BlogLayout title={title} description={description}>
  <!-- Article Header -->
  <article class="max-w-3xl mx-auto px-6 py-20">
    <!-- Breadcrumb -->
    <nav class="mb-12">
      <a href="/" class="text-xs uppercase tracking-[0.3em] text-stone-400 dark:text-stone-500 hover:text-stone-600 dark:hover:text-stone-300 transition-colors">
        ← Volver al Blog
      </a>
    </nav>

    <!-- Category -->
    <span class={`inline-block text-[10px] uppercase font-medium tracking-[0.3em] mb-8 px-4 py-2 rounded-full border-2 bg-transparent ${
      category === 'El poeta jardinero' ? 'border-amber-600 text-amber-600 dark:border-amber-500 dark:text-amber-500' :
      category === 'Enredadera del sueño' ? 'border-blue-600 text-blue-600 dark:border-blue-500 dark:text-blue-500' :
      category === 'La fragua cósmica' ? 'border-orange-600 text-orange-600 dark:border-orange-500 dark:text-orange-500' :
      category === 'La casa del jardín' ? 'border-emerald-600 text-emerald-600 dark:border-emerald-500 dark:text-emerald-500' :
      'border-purple-600 text-purple-600 dark:border-purple-500 dark:text-purple-500'
    }`}>
      {category}
    </span>

    <!-- Title -->
    <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl text-stone-900 dark:text-stone-100 leading-[1.1] mb-12 font-light">
      {title}
    </h1>

    <!-- Date -->
    <time class="text-xs uppercase tracking-[0.2em] text-stone-400 dark:text-stone-500 mb-16 block">
      {formattedDate}
    </time>

    <!-- Featured Image -->
    {image && (
      <div class="relative w-full h-[60vh] mb-20 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-white/80 dark:to-stone-950/80 z-10"></div>
        <img 
          src={image} 
          alt={title}
          class="w-full h-full object-cover filter grayscale-[20%] contrast-110 dark:brightness-75"
        />
      </div>
    )}

    <!-- Article Content -->
    <div class="prose prose-lg prose-stone dark:prose-invert max-w-none">
      <div class="font-serif text-[19px] leading-[1.8] text-stone-700 dark:text-stone-300">
        <slot />
      </div>
    </div>

    <!-- Ornamental Divider -->
    <div class="flex items-center justify-center my-20">
      <div class="h-px w-12 bg-gradient-to-r from-transparent via-amber-600 dark:via-amber-500 to-transparent"></div>
      <span class="mx-4 text-amber-600 dark:text-amber-500 text-xs">✦</span>
      <div class="h-px w-12 bg-gradient-to-r from-transparent via-amber-600 dark:via-amber-500 to-transparent"></div>
    </div>

    <!-- Article Footer -->
    <footer class="mt-16 pt-12 border-t border-stone-200 dark:border-stone-800">
      <div class="flex justify-between items-center">
        <a 
          href="/" 
          class="text-xs uppercase tracking-[0.2em] text-stone-500 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all duration-300"
        >
          ← Más artículos
        </a>
        
        <div class="flex items-center space-x-4">
          <span class="text-[10px] uppercase tracking-[0.3em] text-stone-400 dark:text-stone-500">Compartir</span>
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title + ' - Sagrada Ciencia')}&url=${encodeURIComponent('https://sagradaciencia.vercel.app' + Astro.url.pathname)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-stone-100 dark:bg-stone-800 text-stone-600 dark:text-stone-400 hover:bg-stone-900 hover:text-white dark:hover:bg-stone-700 transition-all duration-300"
            aria-label="Compartir en Twitter"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent('https://sagradaciencia.vercel.app' + Astro.url.pathname)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-stone-100 dark:bg-stone-800 text-stone-600 dark:text-stone-400 hover:bg-blue-600 hover:text-white transition-all duration-300"
            aria-label="Compartir en Facebook"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href={`whatsapp://send?text=${encodeURIComponent(title + ' - ' + 'https://sagradaciencia.vercel.app' + Astro.url.pathname)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full bg-stone-100 dark:bg-stone-800 text-stone-600 dark:text-stone-400 hover:bg-green-600 hover:text-white transition-all duration-300"
            aria-label="Compartir en WhatsApp"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </article>
</BlogLayout>

<style>
  .prose {
    @apply text-stone-700 dark:text-stone-300;
  }
  
  .prose h2 {
    @apply font-serif text-3xl md:text-4xl text-stone-900 dark:text-stone-100 mt-20 mb-8 font-light leading-tight;
  }
  
  .prose h3 {
    @apply font-serif text-2xl md:text-3xl text-stone-800 dark:text-stone-200 mt-12 mb-6 font-light italic;
  }
  
  .prose p {
    @apply mb-8 leading-[1.8];
  }
  
  .prose blockquote {
    @apply border-l-2 border-amber-600 dark:border-amber-500 pl-8 pr-8 italic text-stone-600 dark:text-stone-400 my-12 text-xl font-light;
  }
  
  .prose a {
    @apply text-stone-900 dark:text-stone-100 underline decoration-1 underline-offset-4 hover:decoration-2 transition-all;
  }
  
  .prose p:first-of-type::first-letter {
    @apply font-serif text-7xl float-left mr-4 mt-2 leading-none text-stone-900 dark:text-stone-100;
  }
  
  .prose strong {
    @apply font-semibold text-stone-900 dark:text-stone-100;
  }
  
  .prose em {
    @apply italic text-stone-600 dark:text-stone-400;
  }
  
  article a {
    @apply transition-all duration-300;
  }
  
  ::selection {
    @apply bg-amber-100 dark:bg-amber-900 text-stone-900 dark:text-stone-100;
  }
</style>